# http://editorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[{*.css,*.scss}]
indent_size = 2

[{*.html,*.blade.php}]
indent_size = 4

[{*.js,*.jsx}]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[.*rc]
indent_size = 2

[Makefile]
indent_style = tab
